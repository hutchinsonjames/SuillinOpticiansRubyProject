<div class="well">
  <div class="container">
    <div class="row">
      <div class="col-xs-6 pull-right">
        <%= image_tag product.thumburl, :style => "height:300px"%>
      </div>
      <div class="col-xs-4">
        <h4><%= product.name %></small></h4>
        <p><%= product.model %></p>
        <p><%= product.description %></p>
        <%= form_for order_item, remote: true do |f| %>
        <h4 class="text-right">Unit Price: <span style="color: black"><%= number_to_currency(product.price, :unit => "â‚¬") %></span></h4>
          <div class="input-group">
            <!-- Removing the following line removes the quantity selection box from the store front, some of this other html code is no longer needed and can be removed later -->
            <%#= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
            
            <div class="input-group-btn">
              <%if signed_in?%>
              <%= f.hidden_field :product_id, value: product.id %>
              <%= f.submit "Add to Cart", class: "btn btn-primary right" %>
               <%end%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    
  </div>
</div>

